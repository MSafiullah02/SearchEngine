    "metadata": {
        "title": "MRI evaluation of the olfactory clefts in patients with SARS-CoV-2 infection revealed an unexpected mechanism for olfactory function loss.",
        "authors": [
            {
                "first": "Michael",
                "middle": [],
                "last": "Eliezer",
                "suffix": "",
                "email": "michael.eliezer@aphp.fr",
                "affiliation": {}
            },
            {
                "first": "Charlotte",
                "middle": [],
                "last": "Hautefort",
