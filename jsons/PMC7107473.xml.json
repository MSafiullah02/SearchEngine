    "metadata": {
        "title": "Benefits of Bovine Colostrum on Fecal Quality in Recently Weaned Puppies",
        "authors": [
            {
                "first": "Catriona",
                "middle": [
                    "J."
                ],
                "last": "Giffard",
                "suffix": "",
                "email": null,
