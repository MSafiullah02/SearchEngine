    "metadata": {
        "title": "Cyclosporine has a potential role in the treatment of SARS",
        "authors": [
            {
                "first": "Clark",
                "middle": [
                    "D."
                ],
                "last": "Russell",
                "suffix": "",
                "email": "clarkdrussell@gmail.com",
