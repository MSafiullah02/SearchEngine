    "metadata": {
        "title": "Procalcitonin in patients with severe coronavirus disease 2019 (COVID-19): A meta-analysis",
        "authors": [
            {
                "first": "Giuseppe",
                "middle": [],
                "last": "Lippi",
                "suffix": "",
                "email": null,
                "affiliation": {}
            },
