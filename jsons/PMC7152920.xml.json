    "metadata": {
        "title": "COVID-19: should we continue to cryopreserve sperm during the pandemic?",
        "authors": [
            {
                "first": "Michael",
                "middle": [
                    "Bright"
                ],
                "last": "Yakass",
                "suffix": "",
                "email": null,
                "affiliation": {}
            },
            {
                "first": "Bryan",
