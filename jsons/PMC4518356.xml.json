    "metadata": {
        "title": "Re-emerging Middle East respiratory syndrome coronavirus: The hibernating bat hypothesis",
        "authors": [
            {
                "first": "Hana",
                "middle": [],
                "last": "Fakhoury",
                "suffix": "",
                "email": null,
