                    "ref_id": "BIBREF14"
                },
                {
                    "start": 519,
                    "end": 520,
                    "mention": "7",
                    "ref_id": "BIBREF12"
                },
                {
                    "start": 521,
                    "end": 522,
                    "mention": "8",
                    "ref_id": "BIBREF13"
                },
                {
                    "start": 523,
                    "end": 525,
                    "mention": "11",
                    "ref_id": "BIBREF2"
                },
                {
                    "start": 526,
                    "end": 528,
                    "mention": "12",
