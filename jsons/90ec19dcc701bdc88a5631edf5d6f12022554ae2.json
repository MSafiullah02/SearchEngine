    "metadata": {
        "title": "The Zebrafish Disease and Drug Screening Model: A Strong Ally Against Covid-19",
        "authors": [
            {
                "first": "Jorge",
                "middle": [],
                "last": "Galindo-Villegas",
                "suffix": "",
                "affiliation": {
                    "laboratory": "Genomics Group",
