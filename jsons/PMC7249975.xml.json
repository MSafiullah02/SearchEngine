    "metadata": {
        "title": "The association of low serum albumin level with severe COVID-19: a systematic review and meta-analysis",
        "authors": [
            {
                "first": "Muhammad",
                "middle": [],
                "last": "Aziz",
                "suffix": "",
                "email": "marajani@hotmail.com",
                "affiliation": {}
            },
            {
                "first": "Rawish",
