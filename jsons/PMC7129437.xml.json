    "metadata": {
        "title": "What is the time-scale of hantavirus evolution?",
        "authors": [
            {
                "first": "Yong-Zhen",
                "middle": [],
                "last": "Zhang",
                "suffix": "",
                "email": null,
                "affiliation": {}
            },
            {
                "first": "Edward",
                "middle": [
                    "C."
