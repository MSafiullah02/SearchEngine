    "metadata": {
        "title": "Does the direct renin inhibitor have a role to play in attenuating\nseverity of the outbreak coronavirus disease 2019 (COVID-19)?",
        "authors": [
            {
                "first": "Cheng-Wei",
                "middle": [],
                "last": "Lin",
                "suffix": "",
                "email": null,
                "affiliation": {}
            },
            {
                "first": "Yu-Yao",
