    "metadata": {
        "title": "COVID-19, anxiety, sleep disturbances and suicide",
        "authors": [
            {
                "first": "Leo",
                "middle": [],
                "last": "Sher",
                "suffix": "",
                "email": "Leo.Sher@mssm.edu",
