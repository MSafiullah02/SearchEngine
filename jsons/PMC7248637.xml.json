    "metadata": {
        "title": "Protective effects of vaccinations and endemic infections on COVID-19: A Hypothesis",
        "authors": [
            {
                "first": "Ramachandran",
                "middle": [],
                "last": "Meenakshisundaram",
                "suffix": "",
                "email": "rmsundarchandran@gmail.com",
                "affiliation": {}
            },
            {
                "first": "Subramanian",
                "middle": [],
                "last": "Senthilkumaran",
                "suffix": "",
                "email": "maniansenthil76@gmail.com",
                "affiliation": {}
            },
            {
                "first": "Ponniah",
                "middle": [],
                "last": "Thirumalaikolundusubramanian",
                "suffix": "",
