    "metadata": {
        "title": "Noninvasive ventilation in acute respiratory failure due to H1N1 influenza: A word of caution",
        "authors": [
            {
                "first": "Akashdeep",
                "middle": [],
                "last": "Singh",
                "suffix": "",
                "email": null,
                "affiliation": {}
            },
            {
                "first": "Jaspreet",
