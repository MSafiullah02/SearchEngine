    "metadata": {
        "title": "SARS-CoV-2 shedding and infectivity",
        "authors": [
            {
                "first": "Barry",
                "middle": [],
                "last": "Atkinson",
                "suffix": "",
                "email": null,
                "affiliation": {}
            },
            {
                "first": "Eskild",
